{
  "version": "1.0",
  "name": "messenger",
  "processors": [
    {
      "name": "avatar",
      "operations": [
        {
          "name": "file_size_validate",
          "params": {
            "maxFileSize": {
              "sourceType": "value",
              "source": 1048576
            }
          }
        },
        {
          "name": "file_type_validate",
          "params": {
            "allowedMimeTypes": {
              "sourceType": "value",
              "source": ["image/jpeg", "image/png", "image/heif"]
            }
          }
        },
        {
          "name": "metadata_cleanup"
        },
        {
          "name": "s3_upload",
          "params": {
            "accessKeyId": {
              "sourceType": "env_var",
              "source": "AWS_ACCESS_KEY_ID"
            },
            "secretAccessKey": {
              "sourceType": "env_var",
              "source": "AWS_SECRET_ACCESS_KEY"
            },
            "sessionToken": {
              "sourceType": "env_var",
              "source": "AWS_SESSION_TOKEN"
            },
            "endpoint": {
              "sourceType": "etcd",
              "source": "/services/messenger/aws_endpoint"
            },
            "region": {
              "sourceType": "etcd",
              "source": "/services/messenger/aws_region"
            },
            "bucket": {
              "sourceType": "env_var",
              "source": "AWS_AVATAR_BUCKET"
            }
          }
        }
      ]
    },
    {
      "name": "attachment",
      "operations": [
        {
          "name": "file_size_validate",
          "params": {
            "maxFileSize": {
              "sourceType": "value",
              "source": 104857600
            }
          }
        },
        {
          "name": "s3_upload",
          "params": {
            "accessKeyId": {
              "sourceType": "env_var",
              "source": "AWS_ACCESS_KEY_ID"
            },
            "secretAccessKey": {
              "sourceType": "env_var",
              "source": "AWS_SECRET_ACCESS_KEY"
            },
            "sessionToken": {
              "sourceType": "env_var",
              "source": "AWS_SESSION_TOKEN"
            },
            "endpoint": {
              "sourceType": "etcd",
              "source": "/services/messenger/aws_endpoint"
            },
            "region": {
              "sourceType": "etcd",
              "source": "/services/messenger/aws_region"
            },
            "bucket": {
              "sourceType": "env_var",
              "source": "AWS_ATTACHMENT_BUCKET"
            }
          }
        }
      ]
    }
  ]
}